{
  "name": "drako",
  "version": "0.0.1",
  "description": "Nodejs framework with clean code practices",
  "author": "aptomx",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aptomx/drako.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug=0.0.0.0:9229 --watch",
    "start:prod": "node dist/main",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "start:prod-heroku": "node dist/src/main.js",
    "migration:generate": "npx sequelize-cli migration:generate --name",
    "migration:run": "npx sequelize-cli db:migrate",
    "migration:undo": "npx sequelize-cli db:migrate:undo",
    "migration:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "seed:generate": "npx sequelize-cli seed:generate --name",
    "seed:run": "npx sequelize-cli db:seed:all",
    "seed:run:one": "npx sequelize-cli db:seed --seed",
    "seed:undo": "npx sequelize-cli db:seed:undo",
    "seed:undo:one": "npx sequelize-cli db:seed:undo --seed",
    "seed:undo:all": "npx sequelize-cli db:seed:undo:all",
    "prepare": "husky",
    "docker:up": "docker-compose up -d",
    "docker:up:debug": "docker-compose -f docker-compose.yml -f docker-compose.debug.yml up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:migrate": "docker exec nest-app npm run migration:run",
    "docker:seed": "docker exec nest-app npm run seed:run",
    "docker:seed:undo": "docker exec nest-app npm run seed:undo:all",
    "docker:db:reset": "docker exec nest-app npm run migration:undo:all && docker exec nest-app npm run migration:run && docker exec nest-app npm run seed:run"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.332.0",
    "@aws-sdk/client-ses": "^3.354.0",
    "@aws-sdk/s3-request-presigner": "^3.335.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/class-transformer": "^0.4.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/sequelize": "^11.0.0",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@sentry/node": "^9.30.0",
    "@sentry/profiling-node": "^9.30.0",
    "axios": "^1.5.1",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.8",
    "express-handlebars": "^8.0.3",
    "glob": "^11.0.3",
    "handlebars": "^4.7.7",
    "jwks-rsa": "^3.1.0",
    "mime-types": "^3.0.1",
    "nodemailer": "^7.0.3",
    "nodemailer-express-handlebars": "^7.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "remove": "^0.1.5",
    "rxjs": "^7.2.0",
    "sequelize": "^6.33.0",
    "sequelize-cli": "^6.6.1",
    "sequelize-typescript": "^2.1.5",
    "sharp": "^0.34.2",
    "typescript": "^5.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^22.15.32",
    "@types/nodemailer": "^6.4.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.35",
    "@types/sequelize": "^4.28.16",
    "@types/supertest": "^6.0.3",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.20",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
