# ==========================================
# APPLICATION SETTINGS
# ==========================================
APP_NAME="Your Application Name"
PORT=3000
APP_URL=http://localhost:3000

# ==========================================
# DATABASE SETTINGS
# ==========================================
# Use 'db' for Docker Compose setup, or your actual DB host for local development
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_secure_database_password
DATABASE_NAME=your_database_name
DATABASE_DIALECT=postgres

# ==========================================
# MAIL CONFIGURATION
# ==========================================
MAIL_DRIVER=smtp
MAIL_FROM_NAME="Your App Name"
MAIL_TEST=your.test.email@example.com

# SMTP Settings (Gmail example)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your.email@gmail.com
MAIL_PASSWORD="your_app_specific_password"
MAIL_FROM_ADDRESS=your.email@gmail.com

# ==========================================
# FILESYSTEM SETTINGS
# ==========================================
# Options: local, s3
DISK_CONFIG=local

# ==========================================
# JWT CONFIGURATION
# ==========================================
# Generate a secure random string for production
JWT_SECRET_KEY="your_super_secure_jwt_secret_key_here_use_a_random_generator"
JWT_EXPIRATION_TIME="90d"
JWT_EXPIRATION_TIME_RECOVER_PASSWORD="3600s"

# ==========================================
# DOCKER CONFIGURATION
# ==========================================
# Options: development, production
STAGE=development

# ==========================================
# MONITORING & LOGGING (SENTRY)
# ==========================================
# Set to "none" to disable Sentry, or your actual Sentry DSN
SENTRY_DNS="none"
# Options: develop, staging, production
SENTRY_ENVIRONMENT="develop"

# ==========================================
# AWS SETTINGS (if using S3 for file storage)
# ==========================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET_NAME=your-s3-bucket-name

# ==========================================
# PRODUCTION SETTINGS
# ==========================================
# NODE_ENV=development
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com